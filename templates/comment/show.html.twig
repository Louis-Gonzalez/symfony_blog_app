
{% extends 'layout/base_admin.html.twig' %}
{% block title %}Hello Admin Show Comment{% endblock %}


{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ comment.description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ModifiedAt</th>
                <td>{{ comment.modifiedAt ? comment.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a type= "button" class="btn btn-primary mb-1" href="{{ path('app_comment_index') }}">Back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a type = "button" class="btn btn-warning mb-1" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Edit</a>
    {{ include('comment/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
