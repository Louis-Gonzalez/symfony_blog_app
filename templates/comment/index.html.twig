{% if is_granted('ROLE_ADMIN') %}
    {% set base = "_admin" %}
{% elseif is_granted('ROLE_EDITOR') %}
    {% set base = "_editor" %}
{% else %}
    {% set base = "" %}
{% endif %}
{% extends 'layout/base' ~ base ~ '.html.twig' %}
{% block title %}Adamas / All Comments{% endblock %}



{% block body %}
    <h1>Comment Index</h1>

    {# {{ form_start(form) }}
    <div class="d-flex  align-items-center">
        <div>
        {{ form_widget(form.search) }}
        </div>
        <div>
            <button class="btn btn-outline-success ms-1 " type="submit">
                {% trans %}
                Search
                {% endtrans %}
            </button>
        </div>
    </div>
    {{ form_end(form) }} #}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>ModifiedAt</th>
                <th>Actions</th>
                {% if is_granted ('ROLE_EDITOR') %}
                <th>Visibility</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.description }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.modifiedAt ? comment.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a type = "button" class="btn btn-primary m-1" href="{{ path('app_comment_show', {'id': comment.id}) }}">Show</a>
                    {% if is_granted ('ROLE_ADMIN') or comment.user == app.user %}
                        <a type = "button" class="btn btn-warning m-1" href="{{ path('app_comment_edit', {'id': comment.id}) }}">Edit</a>
                        {% include 'comment/_delete_form.html.twig' with {'id': comment.id} %}
                    {% endif %}
                </td>
                <td>
                {% if is_granted ('ROLE_EDITOR') %}
                    {% if comment.isHidden == 1 %}
                        <a type ="button" href="{{ path('app_comment_hide', {'id': comment.id}) }}"  class="btn btn-secondary m-1" >Hidden</a>
                        {% else %}
                        <a type = "button" href="{{ path('app_comment_hide', {'id': comment.id}) }}" class="btn btn-info m-1" >Visible</a>
                        {% endif %}
                {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
