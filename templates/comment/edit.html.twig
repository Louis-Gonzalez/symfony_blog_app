    {% set base = "_admin" %}
{% elseif is_granted('ROLE_EDITOR') %}
    {% set base = "_editor" %}
{% else %}
    {% set base = "" %}
{% endif %}
{% extends 'layout/base' ~ base ~ '.html.twig' %}
{% block title %}Adamas / Edit Comment{% endblock %}


{% block body %}
    <h1>Edit Comment</h1>
    {{ include('comment/_form.html.twig', {'button_label': 'Update'}) }}

    {% if is_granted('ROLE_ADMIN') %}
        <a type= "button" class="btn btn-secondary mb-1" href="{{ path('app_admin_comment_index') }}">Back to list</a>
    {% else %}
        {# <a type= "button" class="btn btn-secondary mb-1" href="{{ path('app_user_comment_index') }}">Back to list</a> #}
