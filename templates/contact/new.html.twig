{% if is_granted('ROLE_ADMIN') %}
    {% set base = "_admin" %}
{% elseif is_granted('ROLE_EDITOR') %}
    {% set base = "_editor" %}
{% else %}
    {% set base = "" %}
{% endif %}
{% extends 'layout/base' ~ base ~ '.html.twig' %}

{% block title %}Adamas / Contact new{% endblock %}

{% block body %}
    <h1>Create new Contact</h1>

    {{ include('contact/_form.html.twig') }}
    {% if is_granted('ROLE_ADMIN') %}
        <a type="button" class="btn btn-secondary mt-1" href="{{ path('app_admin_contact_index') }}">Back to list</a>
    {% else %}
        <a type="button" class="btn btn-secondary mt-1" href="{{ path('app_user_contact_index') }}">Back to list</a>
    {% endif %}
{% endblock %}
