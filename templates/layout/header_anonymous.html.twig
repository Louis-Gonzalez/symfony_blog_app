<header class="blog-header mt-1 mb-1">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark text-white p-0 pe-2">
        <div class="container-fluid p-0 ">
            <a class="navbar-brand text-white p-0" href="{{path('app_homepage')}}"><img src="{{asset('img/adamas.png')}}" alt="logo adamas" height="50" width="auto"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAnonymous" aria-controls="navbarNavAnonymous" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse align-items-center" id="navbarNavAnonymous">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link text-white" aria-current="page" href="{{path('app_homepage')}}">
                            <h5 class="navbar-anonymous-title">
                            {% trans %}
                                Home
                            {% endtrans %}
                            </h5>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_contact_new')}}">
                        <h5 class="navbar-anonymous-title">
                            {% trans %}
                                Contact
                            {% endtrans %}
                        </h5>
                        </a>
                    </li>
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a class="nav-link text-white" href="{{path('app_login')}}">
                            <h5 class="navbar-anonymous-title">
                                {% trans %}
                                    Login
                                {% endtrans %}
                            </h5>
                            </a>
                        </li>
                    <li class="nav-item ">
                        <a class="nav-link text-white" href="{{path('app_register')}}" tabindex="-1" aria-disabled="true">
                        <h5 class="navbar-anonymous-title">
                            {% trans %}
                                Register
                            {% endtrans %}
                        </h5>
                        </a>
                    </li>
                    
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link blog-header-logo text-white" href="{{path('app_logout')}}">
                            <h5 class="navbar-anonymous-title">
                                {% trans %}
                                    Logout
                                {% endtrans %}
                            </h5>
                            </a>
                        </li>
                    {% endif %}
                    
                    {# <li>
                        {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a class="btn btn-sm btn-outline-secondary" href="{{path('app_register')}}">Sign up</a>
                        {% endif %}
                    </li> #}
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if app.user.avatar.isPrivate == 1 %}
                {% set priv = 'private' %}
                {% else %}
                {% set priv = 'uploads' %}
                {% endif %}
                <a class="nav-link text-white navbar-user-avatar" href="{{ path('app_profil') }}">
                    <img src="{{ asset(priv ~ '/avatar/' ~ app.user.avatar.img) }}" class="avatar">
                </a>
                {% endif %}
                
                <!-- Drapeau de langue avec nouvelle classe -->
                <div class="navbar-locale-flag d-flex align-items-center">
                    {% for locale in locales %}
                    {% if locale != app.request.locale %}
                    <div class="m-2">
                        <a class="dropdown-item bg-dark text-white" href="{{ path('app_change_locale', {'locale': locale}) }}">
                            <img class="m-0" src="{{ asset('/uploads/img/' ~ locale ~ '.jpg') }}" width="20" height="auto" alt="french flag">
                        </a>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </nav>
</header>