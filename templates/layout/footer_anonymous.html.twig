    <script>
        let modalCookie;

        document.addEventListener('DOMContentLoaded', function() {
        modalCookie = new bootstrap.Modal(document.getElementById('modalCookie'));

        // Afficher la modale si le consentement n'est pas défini
        {% if app.session.get('cookie') is null %}
            modalCookie.show();
        {% endif %}

        document.getElementById('accept-cookies').onclick = function() {
            fetch('{{ path('set_cookie_consent') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams({
                    'consent': 'true'
                })
            })
            .then(response => {
                if (response.ok) {
                    modalCookie.hide();
                    updateCookieMessage(true);
                }
            });
        };

        document.getElementById('reject-cookies').onclick = function() {
            fetch('{{ path('set_cookie_consent') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: new URLSearchParams({
                    'consent': 'false'
                })
            })
            .then(response => {
                if (response.ok) {
                    modalCookie.hide();
                    updateCookieMessage(false);
                }
            });
        };

        function updateCookieMessage(consent) {
                // Assurez-vous que c'est bien la classe de votre div de message
                const messageDiv = document.querySelector('.cookie-message'); 
                messageDiv.innerHTML = consent 
                    ? '👍👍👍👍👍👍 Merci d\'utiliser notre site. Nous utilisons des cookies pour personnaliser votre expérience de navigation. En continuant à naviguer sur notre site, vous consentez à notre utilisation des cookies. 👍👍👍👍👍👍'
                    : 'Vous n\'acceptez pas les cookies aujourd\'hui.';
            }
        });

        function modalCookieShow() {
            modalCookie.show();
        }
    </script>






    
