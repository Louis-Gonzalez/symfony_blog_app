    {{ form_row(form.isVerified) }} 
    {% if user.avatar.isPrivate == 1 %}
        <img src="{{ path('serve_private_image', {'path': user.avatar.img}) }}"class="m-2">
    {% else %}
        <img src="{{asset('/uploads/avatar/' ~ user.avatar.img)}}" class="m-2">
    {% endif %}
    {{ form_widget(form.avatar) }}
    {{ form_widget(form) }}
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
