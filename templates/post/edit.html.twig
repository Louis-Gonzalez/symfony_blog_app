{% if is_granted('ROLE_ADMIN') %}
    {% set base = "_admin" %}
{% elseif is_granted('ROLE_EDITOR') %}
    {% set base = "_editor" %}
{% else %}
    {% set base = "" %}
{% endif %}
{% extends 'layout/base' ~ base ~ '.html.twig' %}

{% block title %}Adamas / Edit Post{% endblock %}

{% block body %}
    <h1>Edit Post</h1>
    
    {{ include('post/_form.html.twig', {'button_label': 'Update'}) }}

    <a type="button" class="btn btn-secondary mt-1 mb-1" href="{{ path('app_user_post_index') }}">Back to list</a>

    {{ include('post/_delete_form.html.twig') }}
{% endblock %}
